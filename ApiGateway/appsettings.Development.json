{
  "ReverseProxy": {
    "Clusters": {
      "mycluster": {
        //"LoadBalancingPolicy": "WeightedRoundRobin",
        "Destinations": {
          "instance1": {
            "Address": "http://myservice1:80/",
            "Metadata": { "weight": "5" }
          },
          "instance2": {
            "Address": "http://myservice2:80/",
            "Metadata": { "weight": "3" }
          },
          "instance3": {
            "Address": "http://myservice3:80/",
            "Metadata": { "weight": "1" }
          },
          "instance4": {
            "Address": "http://myservice4:80/",
            "Metadata": { "weight": "2" }
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:05",
            "Timeout": "00:00:02",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    },
    "Routes": {
      "defaultRoute": {
        "ClusterId": "mycluster",
        "Match": { "Path": "{**catch-all}" }
      }
    }
  }
}
